extend ../layout/base

append config
  - var title = "StyleGuide"
  - var metaDesc = "StyleGuide Page"
  - var template = 't-styleguide'
  - var navLinkActive = 'Color'

block content

    +contentHeader("Color")

    h2 Basic colors
