      .swatch-item
        .swatch-item-color.swatch-item-color--clr-0-light
        .swatch-item-title $clr-0-light
      .swatch-item
        .swatch-item-color.swatch-item-color--clr-0
        .swatch-item-title $clr-0
      .swatch-item
        .swatch-item-color.swatch-item-color--clr-0-dark
        .swatch-item-title $clr-0-dark
      .swatch-item
        .swatch-item-color.swatch-item-color--clr-0-darken
        .swatch-item-title $clr-0-darken
    .swatch
      .swatch-item
        .swatch-item-color.swatch-item-color--clr-1-lighten
        .swatch-item-title $clr-1-lighten
      .swatch-item
        .swatch-item-color.swatch-item-color--clr-1-light
        .swatch-item-title $clr-1-light
      .swatch-item
