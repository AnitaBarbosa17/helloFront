mixin menu(menu_items)
  ul.menu-inner
    each top_item in menu_items
      li.menu-item
        a(href=top_item.link, class=navLinkActive == top_item.title ? 'menu-link is-active' : 'menu-link')= top_item.title

mixin contentHeader(title, url)
  header#content-header
    h1.u-mbn= title
    if url
      .u-flexPushleft
        a.button.button--secondary.button--labeled(href= url, target="_blank")
          i.icon-github
          | View on Github
