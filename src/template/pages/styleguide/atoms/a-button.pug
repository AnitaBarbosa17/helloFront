extends ../../../layout/styleguide

append config
  - var template = 't-styleguide'
  - var title = "Buttons"
  - var metaDesc = "Buttons - CSS / HTML"
  - var path = './../../'

block content
  .hf-head
    .hf-wrapper
      h1 Button
      nav
        a(href="#styles") Styles
        a(href="#states") États
        a(href="#sizes") Tailles
  .hf-wrapper
    .hf-content
      h2#styles Styles
    :code
      <a class="a-button" href="#">Bouton</a>
      <button class="a-button">Bouton</button>
      <input class="a-button" type="submit" value="Bouton">
    .hf-content
      h2#states États :
      h3 État actif
    :code
      <a class="a-button" href="#" data-state="active">Bouton</a>
    .hf-content
      h3 Style disabled
    :code
      <a class="a-button" href="#" disabled>Bouton</a>
      <button class="a-button" disabled >Bouton</button>
    .hf-content
      h2#sizes Tailles :
      h3 Taille S
    :code
      <a class="a-button" href="#" data-size="S">Bouton</a>
      <button class="a-button" data-size="S">Bouton</button>
      <input class="a-button" type="submit" value="Bouton" data-size="S"/>
    .hf-content
      h3 Taille L
    :code
      <a class="a-button" href="#" data-size="L">Bouton</a>
      <button class="a-button" data-size="L">Bouton</button>
      <input class="a-button" type="submit" value="Bouton" data-size="L"/>
    .hf-content
      h3 Pleine largeur
    :code
      <a class="a-button" href="#" data-size="full S">Bouton</a>
      <button class="a-button" data-size="full">Bouton</button>
      <input class="a-button" type="submit" value="Bouton" data-size="full L"/>
    .hf-content
      h3 Pleine largeur uniquement sur mobile
    :code
      <a class="a-button" href="#" data-size="fullOnlyMobile S">Bouton</a>
      <button class="a-button" data-size="fullOnlyMobile">Bouton</button>
      <input class="a-button" type="submit" value="Bouton" data-size="fullOnlyMobile L"/>
